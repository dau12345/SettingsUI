<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="text_preference"
        android:title="Text"
        android:summary="Enter your preferred text"
        android:defaultValue="Hello, World!" />

    <ListPreference
        android:key="background_preference"
        android:title="Background Color"
        android:summary="Choose a background color"
        android:defaultValue="#FFFFFF"
        android:entries="@array/background_color_names"
        android:entryValues="@array/background_color_values" />

</PreferenceScreen>
